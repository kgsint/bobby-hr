<aside id="logo-sidebar" class="h-screen min-h-full transition-transform -translate-x-full bg-white border-r border-gray-200 sm:translate-x-0 w-[10%] drop-shadow-lg" aria-label="Sidebar">
    <div class="h-full px-3 pb-4 overflow-y-auto bg-grey-500">
      <ul class="space-y-2 font-medium ms-3 mt-5">
        <li>
            <%= link_to chitoge_dashboard_path, class: "flex items-center p-2 text-gray-900 rounded-lg hover:bg-gray-100 group" do %>
                    <%= render_svg 'dashboard' %>
                    <span class="ms-1">Dashboard</span>
            <% end %>
        </li>
        <% if current_user.company_admin? %>
            <li>
                <%= link_to chitoge_attendances_path, class: "flex items-center p-2 text-gray-900 rounded-lg hover:bg-gray-100 group" do %>
                        <%= render_svg 'attendance' %>
                        <span class="ms-1">Attendance</span>
                <% end %>
            </li>
            <li>
                <%= link_to chitoge_employees_path, class: "flex items-center p-2 text-gray-900 rounded-lg hover:bg-gray-100 group" do %>
                <%= render_svg 'users' %>
                <span class="ms-1">Employees</span>
                <% end %>
            </li>
            <li>
                <%= link_to leave_requests_path, class: "flex items-center p-2 text-gray-900 rounded-lg hover:bg-gray-100 group" do %>
                <%= render_svg 'users' %>
                    <span class="ms-1">Leaves</span>
                <% end %>
            </li>
        <% end %>
        <% if current_user.ghost_admin? %>
            <li>
                <%= link_to chitoge_companies_path, class: "flex items-center p-2 text-gray-900 rounded-lg hover:bg-gray-100 group" do %>
                <%= render_svg 'users' %>
                <span class="ms-1">Companies</span>
                <% end %>
            </li>
            <li>
                <%= link_to "/chitoge/users", class: "flex items-center p-2 text-gray-900 rounded-lg hover:bg-gray-100 group" do %>
                <%= render_svg 'users' %>
                <span class="ms-1">Users</span>
                <% end %>
            </li>
        <% end %>
        <hr>
      </ul>
    </div>
  </aside>

