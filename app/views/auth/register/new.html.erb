
<div class="grid md:grid-cols-2 bg-gray-100 shadow-md rounded-lg mx-5">
    <div class="mx-0 bg-blue-100 invisible md:visible rounded-l-lg w-full h-full flex items-center justify-center">
        <img src="<%= asset_path('main_logo') %>" alt="BobbyHR Logo" class="w-full h-full object-contain" />
      </div>
    <div class="col-sm-span-2 px-5 py-5">
      <h1 class="text-2xl text-center text-blue-500">Registration</h1>
      <%= form_for(@user, as: :user, url: register_path, method: :post, html: { class: "my-5" }) do |f| %>
        <%# name %>
        <div class="relative z-0 w-full mb-5 group">
            <%= f.text_field :name, class: "form_input peer", id: "name", placeholder: " ", required: true %>
            <%= f.label :name, for: "name", class: "form_label peer-focus:font-medium peer-focus:start-0 rtl:peer-focus:translate-x-1/4 rtl:peer-focus:left-auto peer-focus:text-blue-600 peer-focus:dark:text-blue-500 peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-focus:scale-75 peer-focus:-translate-y-6" %>
            <% if @user.errors[:name].any? %>
                <p class="text-sm text-red-500">Name <%= @user.errors[:name].first %></p>
            <% end %>
        </div>
        <%# email address %>
        <div class="relative z-0 w-full mb-5 group">
            <%= f.email_field :email, id: "email", class: "form_input peer", placeholder: " ", required: true %>
            <%= f.label :email, for: "email", class: "form_label peer-focus:font-medium  peer-focus:start-0 rtl:peer-focus:translate-x-1/4 rtl:peer-focus:left-auto peer-focus:text-blue-600 peer-focus:dark:text-blue-500 peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-focus:scale-75 peer-focus:-translate-y-6"  %>
            <% if @user.errors[:email].any? %>
                <p class="text-sm text-red-500">Email Address <%= @user.errors[:email].first %></p>
            <% end %>
        </div>
        <%# password %>
        <div class="relative z-0 w-full mb-5 group">
            <%= f.password_field :password, class: "form_input peer", id: "password", placeholder: " ", required: true %>
            <%= f.label :password, for: "password", class: "form_label peer-focus:font-medium  peer-focus:start-0 rtl:peer-focus:translate-x-1/4 rtl:peer-focus:left-auto peer-focus:text-blue-600 peer-focus:dark:text-blue-500 peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-focus:scale-75 peer-focus:-translate-y-6" %>
            <% if @user.errors[:password].any? %>
                <p class="text-sm text-red-500">Password <%= @user.errors[:password].first %></p>
            <% end %>
        </div>
        <%# confirm password %>
        <div class="relative z-0 w-full mb-5 group">
            <%= f.password_field :confirm_password, class: "form_input peer", id: "password", placeholder: " ", required: true %>
            <%= f.label :confirm_password, for: "password", class: "form_label peer-focus:font-medium  peer-focus:start-0 rtl:peer-focus:translate-x-1/4 rtl:peer-focus:left-auto peer-focus:text-blue-600 peer-focus:dark:text-blue-500 peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-focus:scale-75 peer-focus:-translate-y-6" %>
        </div>
        <%# phone number and company %>
        <div class="grid md:grid-cols-2 md:gap-6">
            <div class="relative z-0 w-full mb-5 group">
                <%= f.text_field :phone_number, id: "phone_number", class: "form_input peer", placeholder: " ", required: true %>
                <%= f.label :phone_number, for: "phone_number", class: "form_label peer-focus:font-medium  peer-focus:start-0 rtl:peer-focus:translate-x-1/4 rtl:peer-focus:left-auto peer-focus:text-blue-600 peer-focus:dark:text-blue-500 peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-focus:scale-75 peer-focus:-translate-y-6" %>
                <% if @user.errors[:phone_number].any? %>
                    <p class="text-sm text-red-500">Phone Number <%= @user.errors[:phone_number].first %></p>
                <% end %>
            </div>
            <div class="relative z-0 w-full mb-5 group">
                <%= f.collection_select :company_id, Company.all, :id, :name, { prompt: "Select a Company" }, { class: "form_input peer", id: "company_id", required: true } %>
                <%= f.label :company_id, for: "company_id", class: "form_label peer-focus:font-medium peer-focus:start-0 rtl:peer-focus:translate-x-1/4 rtl:peer-focus:left-auto peer-focus:text-blue-600 peer-focus:dark:text-blue-500 peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-focus:scale-75 peer-focus:-translate-y-6" %>
                <% if @user.errors[:company_id].any? %>
                  <p class="text-sm text-red-500">Company ID<%= @user.errors[:company_id].first %></p>
                <% end %>
              </div>
        </div>
        <%# submit button %>
        <%= f.submit class: "text-white bg-blue-500 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm w-full px-5 py-2.5 text-center mt-5" %>
      <% end %>
  </div>
</div>
