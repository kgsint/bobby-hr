<%= form_with(model: [:chitoge, @company], class: "contents") do |f| %>
  <% if @company.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(@company.errors.count, "error") %> prohibited this employee from being saved:</h2>
      <ul>
        <% @company.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!-- Registration Form  -->

  <div class="grid md:grid-cols bg-gray-100 shadow-md rounded-lg mx-auto mt-10">
    <div class="col-sm-span-2 px-5 py-5">
      <h1 class="text-2xl text-center text-blue-500 mb-10">Companies Registration</h1>
  
        <div class="grid md:grid-cols-2 md:gap-6">
          <div class="relative z-0 w-full mb-5 group">
            <%= f.text_field :name, class: "form_input peer", id: "name", placeholder: " ", required: true %>
            <%= f.label :name, for: "name", class: "form_label peer-focus:font-medium peer-focus:start-0 rtl:peer-focus:translate-x-1/4 rtl:peer-focus:left-auto peer-focus:text-blue-600 peer-focus:dark:text-blue-500 peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-focus:scale-75 peer-focus:-translate-y-6" %>
            <% if @company.errors[:name].any? %>
                <p class="text-sm text-red-500">Name <%= @company.errors[:name].first %></p>
            <% end %>
          </div>

          <div class="relative z-0 w-full mb-5 group">
            <%= f.text_field :code, class: "form_input peer", id: "code", placeholder: " ", required: true %>
            <%= f.label :code, for: "code", class: "form_label peer-focus:font-medium peer-focus:start-0 rtl:peer-focus:translate-x-1/4 rtl:peer-focus:left-auto peer-focus:text-blue-600 peer-focus:dark:text-blue-500 peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-focus:scale-75 peer-focus:-translate-y-6" %>
            <% if @company.errors[:code].any? %>
                <p class="text-sm text-red-500">Cpde <%= @company.errors[:code].first %></p>
            <% end %>
          </div>
        </div>

          <%# submit button %>
         <div class="flex justify-end mt-10">
         <div>
           <%= link_to "Back", chitoge_companies_path, class: "text-black bg-gray-300 hover:bg-gray-400 focus:ring-4 focus:outline-none focus:ring-gray-300 font-medium rounded-lg text-sm w-full sm:w-auto px-5 py-3 text-center" %>
           <%= f.submit class: "text-white bg-blue-600 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm w-full sm:w-auto px-5 py-2.5 text-center" %>
         </div>
        </div>

    </div>
  </div>
<% end %>
