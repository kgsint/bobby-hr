<div id="<%= dom_id leave_request %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Employee:</strong>
    <%= leave_request.employee_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">From:</strong>
    <%= leave_request.from %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">To:</strong>
    <%= leave_request.to %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Type:</strong>
    <%= leave_request.type %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Status:</strong>
    <%= leave_request.status %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Approved at:</strong>
    <%= leave_request.approved_at %>
  </p>

</div>
